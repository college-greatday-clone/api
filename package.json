{
	"name": "api",
	"version": "1.0.0",
	"main": "src/index.ts",
	"license": "MIT",
	"dependencies": {
		"@prisma/client": "^5.6.0",
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"express-async-errors": "^3.1.1",
		"express-async-handler": "^1.2.0",
		"express-validator": "^7.0.1",
		"jsonwebtoken": "^9.0.2",
		"lodash.omit": "^4.5.0",
		"lodash.omitby": "^4.6.0",
		"lodash.pick": "^4.4.0",
		"lodash.uniqby": "^4.7.0",
		"morgan": "^1.10.0",
		"morgan-body": "^2.6.9",
		"nodemailer": "^6.9.7",
		"winston": "^3.11.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.4.3",
		"@commitlint/config-conventional": "^18.4.3",
		"@types/bcryptjs": "^2.4.6",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.10",
		"@types/jsonwebtoken": "^9.0.5",
		"@types/lodash.omit": "^4.5.9",
		"@types/lodash.omitby": "^4.6.9",
		"@types/lodash.pick": "^4.4.9",
		"@types/lodash.uniqby": "^4.7.9",
		"@types/morgan": "^1.9.9",
		"@types/node": "^20.10.1",
		"@types/nodemailer": "^6.4.14",
		"@types/supertest": "^2.0.16",
		"@typescript-eslint/eslint-plugin": "^6.13.1",
		"@typescript-eslint/parser": "^6.13.1",
		"eslint": "^8.54.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.1",
		"husky": "^8.0.0",
		"jest": "^29.7.0",
		"jest-mock-extended": "^3.0.5",
		"lint-staged": "^15.1.0",
		"prettier": "^3.1.0",
		"prettier-plugin-prisma": "^5.0.0",
		"prisma": "^5.6.0",
		"ts-jest": "^29.1.1",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.3.2"
	},
	"scripts": {
		"dev": "NODE_ENV=development ts-node-dev --respawn --exit-child -r tsconfig-paths/register src/index.ts",
		"prepare": "husky install",
		"version:patch": "yarn version --patch && yarn config set version-git-message \"chore(version): patch %s\"",
		"version:minor": "yarn version --minor && yarn config set version-git-message \"chore(version): minor %s\"",
		"version:major": "yarn version --major && yarn config set version-git-message \"chore(version): major %s\"",
		"lint": "eslint './src/**/*.{js,jsx,ts,tsx,json}'",
		"lint:fix": "eslint --fix './src/**/*.{js,jsx,ts,tsx,json}'",
		"lint:format": "prettier --write './src/**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
		"test": "jest --verbose --coverage",
		"test:update": "jest --verbose --coverage --updateSnapshot",
		"test:watch": "jest --verbose --coverage --watch",
		"test:coverage": "jest --verbose --coverage && open ./coverage/lcov-report/index.html"
	},
	"prisma": {
		"seed": "ts-node-dev prisma/seed.ts"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"yarn lint:format",
			"yarn lint"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"setupFilesAfterEnv": [
			"./src/test/setup.ts",
			"./src/test/prisma-singleton.ts"
		],
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/src/$1"
		}
	}
}
